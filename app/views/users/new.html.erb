<div class="registration-form">
  <h2>新規登録</h2>
  <%= form_with model: @user, url: user_registration_path, local: true do |form| %>
    <div class="form-group">
      <%= form.text_field :name, class: 'form-control', placeholder: '名前' %>
      <% if @user.errors[:name].any? %>
        <div class="error-message"><%= @user.errors[:name].join(", ") %></div>
      <% end %>
    </div>
    <div class="form-group">
      <%= form.email_field :email, class: 'form-control', placeholder: 'メールアドレス' %>
      <% if @user.errors[:email].any? %>
        <div class="error-message"><%= @user.errors[:email].join(", ") %></div>
      <% end %>
    </div>
    <div class="form-group">
      <%= form.password_field :password, class: 'form-control', placeholder: 'パスワード' %>
      <% if @user.errors[:password].any? %>
        <div class="error-message"><%= @user.errors[:password].join(", ") %></div>
      <% end %>
    </div>
    <div class="form-group">
      <%= form.password_field :password_confirmation, class: 'form-control', placeholder: 'パスワード確認' %>
      <% if @user.errors[:password_confirmation].any? %>
        <div class="error-message"><%= @user.errors[:password_confirmation].join(", ") %></div>
      <% end %>
    </div>
    <div class="form-btn">
      <%= form.submit '作成', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>