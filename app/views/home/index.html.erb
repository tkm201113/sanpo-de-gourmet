<!DOCTYPE html>
<html>
<head>
  <title>Nearby Restaurants</title>
  <style>
    .container {
      width: 100%; /* コンテナの幅を設定 */
      margin-top: 10vh;
      display: flex;
      flex-direction: column;
      align-items: center; /* 中央揃え */
    }
    #map, #restaurants {
      width: 60%; /* コンテナ内での幅を100%に設定 */
      height: 30vh; /* 高さを固定 */
      border: 1px solid black;
      border-radius: 8px;
      box-sizing: border-box;
      margin-bottom: 2vh;
    }
    #restaurants {
      background-color: white;
      overflow-y: auto;
      padding: 10px;
      display: flex;
      flex-direction: column;
      align-items: center; /* 中央揃え */
    }
    .card {
      background-color: #FFCC99;
      width: 80%;
      border: 1px solid black;
      padding: 10px;
      margin-bottom: 30px;
      cursor: pointer;
      border-radius: 8px;
      display: flex;
      align-items: flex-start; /* 上寄せ */
    }
    .card h3 {
      font-size: 1.2em; /* 店舗名のフォントサイズを変更 */
      text-decoration: underline; /* 下線を追加 */
      margin-bottom: 10px;
      margin-right: 10px; /* 画像との間隔を設定 */
      height: 100%; /* カードの高さいっぱいに設定 */
      text-align: left; /* 文字を左寄せ */
    }
    .card img {
      flex: 1; /* 画像の幅を自動調整 */
      max-width: 30%; /* 画像の最大幅を設定 */
      height: auto; /* 高さを自動調整 */
      border-radius: 8px; /* 画像の角を丸くする */
      margin: 15px;
    }
    .card-content {
      flex: 2; /* カード内容の幅を自動調整 */
      display: flex;
      flex-direction: column;
      justify-content: space-between; /* コンテンツを均等に配置 */
    }
    .card-content ul {
      list-style-type: none;
      padding: 0;
      font-size: 0.9em; /* テキストサイズを変更 */
      text-align: left; /* テキストを左寄せ */
    }
    .card-content ul li {
      margin: 5px 0;
      position: relative; /* 相対位置に変更 */
      padding-left: 15px; /* 左側にスペースを追加 */
    }
    .card-content ul li::before {
      content: '•'; /* 黒点を追加 */
      position: absolute; /* 絶対位置 */
      left: 0; /* 左端に配置 */
      color: black; /* 黒色に設定 */
    }
  </style>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAX9Be4_3dwav-hf9Xqsob1S0sBcgEUBUY&libraries=places,geometry&callback=initMap" async defer></script>
  <script>
    function initMap() {
      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(function(position) {
          var currentLocation = {
            lat: position.coords.latitude,
            lng: position.coords.longitude
          };

          var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 14,
            center: currentLocation
          });

          var service = new google.maps.places.PlacesService(map);
          service.nearbySearch({
            location: currentLocation,
            radius: 500,
            type: ['restaurant']
          }, function(results, status) {
            if (status === google.maps.places.PlacesServiceStatus.OK) {
              var restaurantsContainer = document.getElementById('restaurants');
              restaurantsContainer.innerHTML = '<h2>検索結果</h2>'; // 検索結果のテキストを追加
              results.forEach(function(place) {
                var card = document.createElement('div');
                card.classList.add('card');

                // Fetch additional details for each place
                service.getDetails({ placeId: place.place_id }, function(placeDetails, status) {
                  if (status === google.maps.places.PlacesServiceStatus.OK) {
                    var openingHoursText = placeDetails.opening_hours ? placeDetails.opening_hours.weekday_text.join('<br>') : '不明';
                    var image = placeDetails.photos ? placeDetails.photos[0].getUrl() : '';
                    card.innerHTML = `
                      <img src="${image}" alt="${placeDetails.name}">
                      <div class="card-content">
                        <h3>${placeDetails.name}</h3>
                        <ul>
                          <li>住所: ${placeDetails.formatted_address}</li>
                          <li>電話番号: ${placeDetails.formatted_phone_number || '不明'}</li>
                          <li>徒歩: ${calculateWalkingTime(currentLocation, placeDetails.geometry.location)}分</li>
                          <li>営業状況: ${placeDetails.opening_hours && placeDetails.opening_hours.isOpen() ? '営業中' : '休業中'}</li>
                          <li>営業時間: ${openingHoursText}</li>
                          <li>混雑状況: ${placeDetails.waiting_time ? placeDetails.waiting_time : '不明'}分待ち</li>
                        </ul>
                      </div>
                    `;
                    card.addEventListener('click', function() {
                      window.location.href = placeDetails.url; // 店舗詳細ページに遷移
                    });
                    restaurantsContainer.appendChild(card);
                  }
                });
              });
            } else {
              console.error('PlacesServiceStatus Error:', status);
            }
          });
        });
      } else {
        alert("Geolocation is not supported by this browser.");
      }
    }

    function calculateWalkingTime(start, end) {
      var distance = google.maps.geometry.spherical.computeDistanceBetween(start, end);
      var walkingSpeedMetersPerMinute = 80;
      return Math.round(distance / walkingSpeedMetersPerMinute);
    }
  </script>
</head>
<body>
  <div class="container">
    <div id="map"></div>
    <div id="restaurants"></div>
  </div>
</body>
</html>